---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
	<span slot="title">PrimerPaso.com â€” Connecting students and companies</span>

	<section class="hero">
		<div class="container hero-grid">
			<div class="hero-left">
				<h2>Your first step toward a successful career</h2>
				<p class="lead">At PrimerPaso we connect students and recent graduates with companies looking for motivated, trained talent. We make internships, jobs and training programs easy to find.</p>
				<div class="search-row">
					<input id="searchInput" placeholder="Search: title, company or location" />
					<select id="filterLocation"><option value="">Any location</option><option>Remote</option><option>On-site</option></select>
					<div class="cta-row">
						<a class="btn warm" href="/loginuser" aria-label="Student">I'm a student</a>
						<a class="btn cool" href="/company-login" aria-label="Company">I'm a company</a>
					</div>
				</div>
			</div>
			<div class="hero-right">
				<div class="card visual-card">
					<h3>Find internships, scholarships and jobs</h3>
					<p class="muted">Filter by area, modality and duration. A platform made for students.</p>
					<div class="search-mock">
						<input placeholder="Search: Frontend, Marketing, Data..." />
						<button class="btn warm">Search</button>
					</div>
				</div>
			</div>
		</div>
	</section>

	<section id="mision" class="section light">
		<div class="container">
			<h2>Our mission</h2>
			<p>Empower students and recent graduates to enter the job market with confidence, and give companies access to motivated young talent. We work with universities and training centers to close the gap between study and work.</p>
		</div>
	</section>

	<section id="especializacion" class="section">
		<div class="container">
			<h2>Areas of specialization</h2>
			<div class="grid-areas">
				<article class="card area warm">
					<h3>Frontend & UX</h3>
					<p>Interface design, accessibility, and modern web development.</p>
				</article>
				<article class="card area warm-2">
					<h3>Data Science</h3>
					<p>Analytics, visualization, and modeling for data-driven decisions.</p>
				</article>
				<article class="card area cool">
					<h3>FinTech & Business</h3>
					<p>Solutions for finance, business analysis, and process design.</p>
				</article>
				<article class="card area cool-2">
					<h3>Digital Marketing</h3>
					<p>Strategy, content, and digital growth for brands.</p>
				</article>
			</div>
		</div>
	</section>

	<section id="empresas" class="section light">
		<div class="container">
			<h2>Partner companies</h2>
			<div class="partners">
				<div class="partner">DataLabs</div>
				<div class="partner">FinTech Hub</div>
				<div class="partner">Creative Agency</div>
				<div class="partner">GreenEnergy</div>
				<div class="partner">HealthCo</div>
			</div>
		</div>
	</section>

	<section id="certificaciones" class="section">
		<div class="container">
			<h2>Certifications & recognition</h2>
					<div class="cert-grid">
						<div class="cert card">University Internship Seal</div>
						<div class="cert card">Employability Accreditation 2024</div>
						<div class="cert card">Best Student Platform 2023</div>
					</div>
		</div>
	</section>

	<section id="estadisticas" class="section stats">
		<div class="container">
			<h2>Impact in numbers</h2>
			<div class="stats-grid">
				<div class="stat card">
					<h3 class="num" data-target="1240">0</h3>
					<p>Students placed</p>
				</div>
				<div class="stat card">
					<h3 class="num" data-target="320">0</h3>
					<p>Partner companies</p>
				</div>
				<div class="stat card">
					<h3 class="num" data-target="87">0</h3>
					<p>Success rate (%)</p>
				</div>
				<div class="stat card">
					<h3 class="num" data-target="15">0</h3>
					<p>Certified programs</p>
				</div>
			</div>
		</div>
	</section>

	<section class="section cta-quote">
		<div class="container">
			<div class="cta-card card">
				<h2>Ready to take your first step?</h2>
				<p class="muted">Join as a student or post opportunities for your company. With PrimerPaso you bring talent and work closer together.</p>
				<div class="cta-row">
					<a class="btn warm" href="/loginuser">I'm a student</a>
					<a class="btn cool ghost" href="/company-login">I'm a company</a>
				</div>
			</div>
		</div>
	</section>

</BaseLayout>
